{
  "name": "merchant-risk-platform",
  "dockerComposeFile": [
    "../infra/local/docker-compose.yml"
  ],
  "service": "ingestion-api",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "remoteUser": "app",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install --user -r /workspace/services/ingestion_api/requirements.txt"
}
